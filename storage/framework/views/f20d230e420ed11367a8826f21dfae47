   <script type="text/javascript">
	$(document).ready(function() { 
		
		
		$("#username").jCombo("<?php echo e(URL::to('donationlist/comboselect?filter=tb_users:username:username')); ?>",
		{  selected_value : '<?php echo e($row["username"]); ?>' });
		
		$("#user_bank").jCombo("<?php echo e(URL::to('donationlist/comboselect?filter=tb_banks:bank_name:bank_name')); ?>",
		{  selected_value : '<?php echo e($row["user_bank"]); ?>' });
		 

		$('.removeCurrentFiles').on('click',function(){
			var removeUrl = $(this).attr('href');
			$.get(removeUrl,function(response){});
			$(this).parent('div').empty();	
			return false;
		});		
		
	});
	</script>		 
